<div class="container">
  <div class="home-banner">
<div class="content-banner">
    <h1>Sweet Succulents</h1>
    <p> <button type="button" class="btn btn-light">
      <%= link_to 'Add a new succulent.', new_succulent_path %>
    </button></p>
    </div>
</div>

  <div class="card-category">
    <% @succulents.each do |succulent| %>
    <div class="card" style="width: 18rem;">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= succulent.name %></h5>
        <p class="card-text"><%= succulent.description %></p>
        <p class="btn btn-light"><%= link_to 'Edit' , edit_succulent_path(succulent) %></p>
      </div>
    </div>
  <%end%>
</div>
</div>
</div>
